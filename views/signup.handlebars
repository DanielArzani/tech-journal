<section class="section-signup">
  <span class="section-signup--title">Signup</span>
  <form class="section-signup--form">
    <div>
      <label for="section-signup--username">Username</label>
      <input type="text" id="section-signup--username" />
    </div>
    <div>
      <label for="section-signup--password">Password</label>
      <input type="password" id="section-signup--password" />
    </div>
    <div>
      <label for="section-signup--email">Email</label>
      <input type="text" id="section-signup--email" />
    </div>
    <button class="btn" type="submit">Sign Up!</button>
    <a class="section-signup--login-link" href="/login">Login Instead</a>
  </form>
</section>

<script src="/javascript/signup.js"></script>
{{#if editOrNot}}
  {{#each posts}}
    <a href="/dashboard/edit/{{id}}">
      <div class="post">
        <div class="post-top">
          <span class="post-top--title">{{title}}</span>
          <div>
            <span class="post-top--created_by">Posted by
              {{user.username}}</span>
            <span class="post-top--created_at"> on {{created_at}}</span>
          </div>
        </div>
        <div class="post-bottom">
          <p class="post-bottom--text_content">{{content_body}}</p>
        </div>
      </div>
    </a>
  {{/each}}
{{else}}
  {{#each posts}}
    <a href="/posts/{{id}}">
      <div class="post">
        <div class="post-top">
          <span class="post-top--title">{{title}}</span>
          <div>
            <span class="post-top--created_by">Posted by
              {{user.username}}</span>
            <span class="post-top--created_at"> on {{created_at}}</span>
          </div>
        </div>
        <div class="post-bottom">
          <p class="post-bottom--text_content">{{content_body}}</p>
        </div>
      </div>
    </a>
  {{/each}}
{{/if}}